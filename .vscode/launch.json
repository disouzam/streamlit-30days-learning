    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Streamlit - Day17",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/day17/day17.py",
                "--server.port",
                "8501"
            ],
            "cwd": "${workspaceFolder}/day17"
        },
        {
            "name": "Streamlit - Day26",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/day26/day26.py",
                "--server.port",
                "8501"
            ],
            "cwd": "${workspaceFolder}/day26"
        }
    ]
}